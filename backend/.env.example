# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swspace
DB_USER=swspace_user
DB_PASSWORD=swspace_password

# Application Configuration
NODE_ENV=development
# Backend hợp nhất mặc định chạy ở 5000 (xem backend/index.js)
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Frontend User (CRA) mặc định 3000, Frontend Admin (Vite) mặc định 5174
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5174

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@swspace.vn

# Payment Configuration (Optional)
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
ZALOPAY_APP_ID=
ZALOPAY_KEY=
